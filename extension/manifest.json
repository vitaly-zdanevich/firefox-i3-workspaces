{
  "manifest_version": 2,
  "name": "i3-workspaces",
  "version": "0.9",
  "description": "Restore Firefox windows to correct i3 workspaces.",
  "homepage_url": "https://github.com/yurikhan/firefox-i3-workspaces/",
  "icons": {
    "48": "icons/i3-48.png",
    "96": "icons/i3-96.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "i3-workspaces@yurikhan.space"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "nativeMessaging",
    "sessions"
  ]
}
